<section>
    <div class="site-container">
        <h1>Task Index</h1>
        <%= render 'search' %>
        <% if @tasks.present? %>
            <div class="card-container">
                <% @tasks.each do |task| %>
                    <div class="card">
                        <% if task.title %>
                            <h2><%= task.title %></h2>
                        <% end %>
                        <%= render 'actions', task: task %>
                    </div>
                <% end %>
            </div>
        <% else %>
            <p class="error">No tasks found.</p>
        <% end %>
        <%= link_to 'Add', new_task_path %>
    </div>
</section>