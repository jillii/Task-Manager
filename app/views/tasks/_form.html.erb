<%= form_with model: @task, class: 'form-default' do |form| %>
    <div class="input">
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    <div class="input">
        <%= form.label :detail %>
        <%= form.textarea :detail %>
    </div>
    <%= form.submit %>
<% end %>